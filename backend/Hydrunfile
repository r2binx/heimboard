#!/bin/bash
echo "Installing dependencies..."
apt update && apt upgrade -y && apt install -y python3 python3-dev python3-wheel python3-pip python3-setuptools python3-typing-extensions git build-essential pkg-config upx-ucl libssl-dev libffi-dev libvirt-dev curl zlib1g-dev python3-cryptography-

echo "Installing latest version of rust"
curl -O https://curl.se/ca/cacert.pem
curl --cacert cacert.pem --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y

echo "Activating rust"
source $HOME/.cargo/env

rustup update

echo "Installing python dependencies"
cat >/etc/pip.conf <<EOL
[global]
extra-index-url=https://www.piwheels.org/simple
EOL

pip3 install -r requirements.txt
echo "Installing pyinstaller"
git clone https://github.com/pyinstaller/pyinstaller
cd pyinstaller
git checkout v4.8
cd bootloader && python3 ./waf distclean all
cd ..
python3 setup.py install
cd ..

make clean
echo "Building wakeup server"
mkdir out
make build-wakeup
if [ ! -z $1 ]; then
  cp dist/wakeup.linux* out/wakeup-$1.linux-$(uname -m)
else
  cp dist/wakeup.linux* out/
fi

make clean
echo "Building backend"
make build

if [ ! -z $1 ]; then
  cp dist/heimboard-backend.linux* out/heimboard-backend-$1.linux-$(uname -m)
else
  cp dist/heimboard-backend.linux* out/
fi

rm -rf pyinstaller
